<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="settings_settings"
        android:title="@string/pref_title" >

    <CheckBoxPreference
        android:key="night_checkbox"
        android:title="@string/pref_night"
        android:summary="@string/pref_night_summary"
        android:defaultValue="false" />


    <EditTextPreference
        android:key="example_text"
        android:title="@string/pref_title_demo1"
        android:defaultValue="@string/pref_default_demo1"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceCategory>

    <ListPreference
        android:key="example_list"
        android:title="@string/pref_title_demo2"
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
