<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_item_height"
    android:background="?attr/selectableItemBackground"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/navigation_drawer_item_padding"
    android:paddingRight="@dimen/navigation_drawer_item_padding">

    <ImageView
        android:id="@+id/ivItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navigation_drawer_item_padding"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_weight="99"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/navdrawer_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />
</LinearLayout>